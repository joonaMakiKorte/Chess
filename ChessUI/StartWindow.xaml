<Window x:Class="Chess.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess Start" Height="1000" Width="1000"
        
        Icon="pics/icon.ico">
    <Window.Background>
        <ImageBrush ImageSource="pics/backgroundpic.png" Stretch="UniformToFill"/>
    </Window.Background>

    <!-- Square Button Style -->
    <Window.Resources>
        <Style x:Key="SquareButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to Chess!" Foreground="Red" FontSize="30" Margin="0,0,0,20"/>

            <!-- Game Mode Selection -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="Button1v1" Width="400" Height="400"
                        Margin="10,0" Click="GameMode_Click" Style="{StaticResource SquareButtonStyle}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        
                        <Image Source="/pics/manvman.png" Width="400" Height="400" Stretch="Uniform"/>
                    </StackPanel>
                </Button>

                <Button x:Name="ButtonAI" Width="400" Height="400" Margin="10,0" Click="GameMode_Click" Style="{StaticResource SquareButtonStyle}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        
                        <Image Source="/pics/manvmachine.png" Width="400" Height="400" Stretch="Uniform"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <ComboBox x:Name="AIDifficultyComboBox" Width="200" Margin="0,0,0,10" Visibility="Collapsed">
                <ComboBoxItem Content="Easy"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="Hard"/>
            </ComboBox>

            <!-- Timer Selection -->
            <TextBlock x:Name="SelectionTextBlock" Text="Select Timer (minutes):" Foreground="Red" FontSize="20" Margin="0,0,0,10"/>
            <Slider x:Name="TimerSlider" Width="200" Minimum="1" Maximum="60"
                    TickFrequency="1" IsSnapToTickEnabled="False"
                    ValueChanged="TimerSlider_ValueChanged" Margin="0,0,0,20"/>
            <TextBlock x:Name="TimerValueTextBlock" Text="1" Foreground="Red" FontSize="20" HorizontalAlignment="Center"/>

            <Button Content="Start Game" Click="StartGame_Click" Width="200" Height="40" Margin="0,0,0,10"/>
            <Button Content="Exit" Click="Exit_Click" Width="200" Height="40"/>
        </StackPanel>
    </Grid>

</Window>
