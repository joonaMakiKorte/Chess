<Window x:Class="Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess"
        mc:Ignorable="d"
        Title="Chess Engine"
        Icon="pack://application:,,,/src/Assets/Images/icon.ico"
        WindowStartupLocation="Manual"
        ResizeMode="CanResize"
        Background="#222">

    <!-- Wrap elements in a viewbox -->
    <Viewbox Stretch="Uniform">
        <Grid Width="880" Height="710">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="650"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" x:Name="MainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top timer -->
                <Border Grid.Row="0"
                        Background="#111" HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        CornerRadius="3"
                        Padding="8,2"
                        Width="75"
                        Margin="25,10,0,5">
                    <Label x:Name="TopTimerLabel"
                           Content="00:00"  FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="White"/>
                </Border>

                <!-- Main chess board-->
                <Grid x:Name="PieceGrid"
                      Grid.Row="1" Width="600"
                      Height="600"
                      Focusable="True"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Grid.Background>
                        <ImageBrush ImageSource="pack://application:,,,/src/Assets/Images/Board.png"/>
                    </Grid.Background>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                </Grid>

                <Grid Grid.Row="2" HorizontalAlignment="Left" Margin="25,5,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Bottom Timer -->
                    <Border Grid.Column="0" x:Name="BottomWrap"
                        Background="#111"
                        CornerRadius="3"
                        Padding="8,2"
                        Width="75"
                        VerticalAlignment="Center">
                        <Label x:Name="BottomTimerLabel"
                           Content="00:00"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="White"/>
                    </Border>


                    <!-- Resign Button -->
                    <Button Grid.Column="2"
                       x:Name="ResignButton"
                       Background="#555555"
                       Padding="8,2"
                       Margin="5,0,0,0"
                       Cursor="Hand"
                       BorderBrush="#333333"
                       BorderThickness="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Click="ResignButton_Click"
                       Width="{Binding ActualHeight, ElementName=BottomWrap}"
                       Height="{Binding ActualHeight, ElementName=BottomWrap}"
                       Visibility="Hidden">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3">
                                    <Viewbox Margin="5">
                                        <Image Source="pack://application:,,,/src/Assets/Images/Resign.png" Width="20" Height="20"/>
                                    </Viewbox>         
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="WhiteSmoke"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="Gainsboro"/>
                                        <Setter TargetName="border" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="10" Color="WhiteSmoke" Opacity="0.7"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Move log-->
                <Border Grid.Row="0" x:Name="MoveLogWrap"
                    Background="#2A2A2A" 
                    CornerRadius="8"
                    Padding="5"
                    Margin="10">
                    <ListView x:Name="MoveLogView"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          Foreground="#E0E0E0"
                          BorderThickness="0"
                          AlternationCount="2"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <ListView.Resources>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="8,6" />
                                <Setter Property="Margin" Value="0,1" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}"
                                                SnapsToDevicePixels="True">
                                                <GridViewRowPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="#333333" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#454545" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#505050" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Background" Value="#3C3C3C"/>
                                <Setter Property="Foreground" Value="#F0F0F0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#555555"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            </Style>
                        </ListView.Resources>

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="#" Width="35">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Turn}" TextAlignment="Center" Padding="0" FontWeight="SemiBold" FontSize="16"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="White" Width="75">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding WhiteMove}" FontWeight="SemiBold" FontSize="16" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Black" Width="95">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding BlackMove}" FontWeight="SemiBold" FontSize="16" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>

                <!-- Game over field -->
                <Border x:Name="GameOverField"
                    Grid.Row="1"
                    Background="#2A2A2A" 
                    CornerRadius="8"
                    Padding="5"
                    Margin="10,0,10,0"
                    Visibility="Collapsed">
                    <TextBlock x:Name="GameOverTextBlock"
                            Text="" Foreground="White"
                            FontSize="16"
                            FontWeight="SemiBold"
                            TextAlignment="Center"
                            TextWrapping="Wrap"
                            Margin="10,8,10,10"/>
                </Border>

                <!-- Button container with fixed height -->
                <Grid Grid.Row="2"
                    x:Name="ButtonContainer"
                    Height="40"
                    Margin="10">

                    <!-- New game button -->
                    <Button x:Name="NewGameButton"
                        Background="#555555"
                        Padding="5"
                        Cursor="Hand"
                        BorderBrush="#333333"
                        BorderThickness="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="NewGameButton_Click" 
                        Content="New Game"
                        Foreground="White"
                        FontSize="16" 
                        FontWeight="SemiBold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#4A90E2"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#357ABD"/>
                                        <Setter TargetName="border" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="10" Color="#4A90E2" Opacity="0.7"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Confirmation buttons -->
                    <Grid x:Name="ConfirmationPanel"
                        Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Yes Button -->
                        <Button Grid.Column="0"
                            x:Name="YesButton"
                            Background="#555555"
                            Padding="5"
                            Cursor="Hand"
                            BorderBrush="#333333"
                            BorderThickness="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Click="YesButton_Click"
                            Content="Yes"
                            Foreground="White"
                            FontSize="16" 
                            FontWeight="SemiBold">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#4CAF50"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="#388E3C"/>
                                            <Setter TargetName="border" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="10" Color="#FF4CAF50" Opacity="0.7"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- No Button -->
                        <Button Grid.Column="2"
                            x:Name="NoButton"
                            Background="#555555"
                            Padding="5"
                            Cursor="Hand"
                            BorderBrush="#333333"
                            BorderThickness="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Click="NoButton_Click"
                            Content="No"
                            Foreground="White"
                            FontSize="16" 
                            FontWeight="SemiBold">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#F44336"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="#D32F2F"/>
                                            <Setter TargetName="border" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="10" Color="#FFF44336" Opacity="0.7"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Viewbox>
</Window>